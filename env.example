# =================================
# Medical Content System Configuration
# =================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_username
TELEGRAM_ADMIN_ID=your_admin_user_id

# Database Configuration
DATABASE_URL=sqlite:./data/content.db
DATABASE_TYPE=sqlite

# PubMed API Configuration
PUBMED_API_KEY=your_pubmed_api_key_here
PUBMED_EMAIL=your_email@example.com
PUBMED_TOOL=MedicalContentSystem

# RSS Feeds Configuration
RSS_FEEDS_FILE=./config/rss-feeds.json
RSS_UPDATE_INTERVAL=3600000

# Content Scoring Configuration
SCORING_THRESHOLD=14
SCORING_MAX=25
SCORING_WEIGHTS=clinical:5,evidence:5,novelty:5,applicability:5,controversy:5

# Content Processing Configuration
CONTENT_PROCESSING_BATCH_SIZE=10
CONTENT_PROCESSING_DELAY=5000
MAX_CONTENT_AGE_DAYS=7

# Publication Configuration
PUBLICATION_SCHEDULE=0 9,15,21 * * *
PUBLICATION_TIMEZONE=Europe/Moscow
PUBLICATION_DELAY_MINUTES=5

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=300000
ALERT_EMAIL=alerts@example.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/system.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# API Configuration
API_PORT=3000
API_HOST=localhost
API_RATE_LIMIT=100

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
NOTION_API_KEY=your_notion_api_key
NOTION_DATABASE_ID=your_notion_database_id
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# Content Sources
NEJM_RSS_URL=https://www.nejm.org/action/showFeed?type=etoc&feed=rss
LANCET_RSS_URL=https://www.thelancet.com/rssfeed/lancet_current.xml
JAMA_RSS_URL=https://jamanetwork.com/rss/site_1/1.xml
BMJ_RSS_URL=https://www.bmj.com/rss/current.xml

# Specialization-specific sources
CARDIOLOGY_SOURCES=ESC,ACC,AHA,EHJ,Circulation
ONCOLOGY_SOURCES=ESMO,ASCO,NCCN,JCO,Annals
UROLOGY_SOURCES=EAU,AUA,European_Urology,J_Urology

# Content Templates
TEMPLATES_DIR=./templates
VISUALS_DIR=./visuals
OUTPUT_DIR=./output

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# Development Configuration
NODE_ENV=development
DEBUG=medical-content:*
HOT_RELOAD=true

# Testing Configuration
TEST_DATABASE_URL=sqlite:./test/data/test.db
TEST_TELEGRAM_CHANNEL=@test_channel
MOCK_EXTERNAL_APIS=true
